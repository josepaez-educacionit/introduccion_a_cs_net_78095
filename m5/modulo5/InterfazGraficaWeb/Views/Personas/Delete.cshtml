@model InterfazGraficaWeb.Models.Persona

@{
    ViewData["Title"] = "Eliminar Persona";
}

<h1>Eliminar Persona</h1>

<h3>¿Está seguro que desea eliminar esta persona?</h3>
<div>
    <h4>@Model.Nombre @Model.Apellido</h4>
    <dl class="row">
        <dt class="col-sm-2">Documento</dt>
        <dd class="col-sm-10">@Model.NumeroDocumento</dd>
        <dt class="col-sm-2">Domicilio</dt>
        <dd class="col-sm-10">@Model.Domicilio</dd>
        <dt class="col-sm-2">Teléfono</dt>
        <dd class="col-sm-10">@Model.Telefono</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="PersonaId" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

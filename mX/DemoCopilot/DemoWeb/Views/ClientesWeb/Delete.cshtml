@model DemoWeb.Models.Cliente

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">
                    <i class="fas fa-exclamation-triangle"></i> Confirmar Eliminación
                </h4>
            </div>
            <div class="card-body">
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-circle"></i>
                    <strong>¡Atención!</strong> Está a punto de eliminar permanentemente este cliente.
                    Esta acción no se puede deshacer.
                </div>

                <h5 class="text-danger mb-3">¿Está seguro que desea eliminar el siguiente cliente?</h5>
                
                <div class="card bg-light">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-2">
                                    <strong><i class="fas fa-hashtag"></i> ID:</strong>
                                    <span class="ms-2">@Html.DisplayFor(model => model.Id)</span>
                                </div>
                                <div class="mb-2">
                                    <strong><i class="fas fa-user"></i> Nombre Completo:</strong>
                                    <span class="ms-2">@Html.DisplayFor(model => model.NombreCompleto)</span>
                                </div>
                                <div class="mb-2">
                                    <strong><i class="fas fa-envelope"></i> Email:</strong>
                                    <span class="ms-2">@Html.DisplayFor(model => model.Email)</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                @if (!string.IsNullOrEmpty(Model.Telefono))
                                {
                                    <div class="mb-2">
                                        <strong><i class="fas fa-phone"></i> Teléfono:</strong>
                                        <span class="ms-2">@Html.DisplayFor(model => model.Telefono)</span>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(Model.Direccion))
                                {
                                    <div class="mb-2">
                                        <strong><i class="fas fa-map-marker-alt"></i> Dirección:</strong>
                                        <span class="ms-2">@Html.DisplayFor(model => model.Direccion)</span>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <form asp-action="Delete" method="post" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <a asp-action="Index" class="btn btn-secondary me-2">
                                <i class="fas fa-arrow-left"></i> Cancelar y Volver
                            </a>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                                <i class="fas fa-eye"></i> Ver Detalles
                            </a>
                        </div>
                        
                        <button type="submit" class="btn btn-danger" onclick="return confirmarEliminacion()">
                            <i class="fas fa-trash"></i> Confirmar Eliminación
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <div class="alert alert-warning">
        <i class="fas fa-info-circle"></i>
        <strong>Información importante:</strong>
        <ul class="mb-0 mt-2">
            <li>Una vez eliminado, no podrá recuperar la información del cliente.</li>
            <li>Se recomienda verificar que no existan registros relacionados antes de proceder.</li>
            <li>Esta acción quedará registrada en el sistema por motivos de auditoría.</li>
        </ul>
    </div>
</div>

@section Scripts {
    <script>
        function confirmarEliminacion() {
            return confirm(
                '¿CONFIRMA QUE DESEA ELIMINAR ESTE CLIENTE?\n\n' +
                'Cliente: @Model.NombreCompleto\n' +
                'Email: @Model.Email\n\n' +
                'Esta acción es IRREVERSIBLE.\n\n' +
                'Presione "Aceptar" para confirmar la eliminación o "Cancelar" para volver.'
            );
        }

        $(document).ready(function() {
            // Enfocar el botón cancelar por seguridad
            $('a[asp-action="Index"]').focus();
            
            // Agregar efecto de advertencia al botón de eliminar
            $('.btn-danger').hover(
                function() {
                    $(this).addClass('shadow-lg');
                },
                function() {
                    $(this).removeClass('shadow-lg');
                }
            );
        });
    </script>
}
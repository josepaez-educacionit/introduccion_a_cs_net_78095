@model IEnumerable<DemoWeb.Models.Cliente>

@{
    ViewData["Title"] = "Gestión de Clientes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-users text-primary"></i> Gestión de Clientes</h2>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus"></i> Nuevo Cliente
    </a>
</div>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fas fa-list"></i> Lista de Clientes</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Id)</th>
                            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                            <th>@Html.DisplayNameFor(model => model.Apellido)</th>
                            <th>@Html.DisplayNameFor(model => model.Email)</th>
                            <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                            <th>@Html.DisplayNameFor(model => model.Direccion)</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
                                <td>
                                    <a href="mailto:@item.Email" class="text-decoration-none">
                                        <i class="fas fa-envelope"></i> @Html.DisplayFor(modelItem => item.Email)
                                    </a>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Telefono))
                                    {
                                        <a href="tel:@item.Telefono" class="text-decoration-none">
                                            <i class="fas fa-phone"></i> @Html.DisplayFor(modelItem => item.Telefono)
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" 
                                           class="btn btn-outline-info btn-sm" 
                                           title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" 
                                           class="btn btn-outline-warning btn-sm" 
                                           title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" 
                                           class="btn btn-outline-danger btn-sm" 
                                           title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-users fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">No hay clientes registrados</h4>
                <p class="text-muted">Comienza agregando tu primer cliente.</p>
                <a asp-action="Create" class="btn btn-success">
                    <i class="fas fa-plus"></i> Agregar Primer Cliente
                </a>
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <small class="text-muted">
        <i class="fas fa-info-circle"></i> Total de clientes: @Model.Count()
    </small>
</div>

@section Scripts {
    <script>
        // Agregar confirmación para eliminación
        $(document).ready(function() {
            $('a[title="Eliminar"]').click(function(e) {
                if (!confirm('¿Está seguro que desea eliminar este cliente?')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}
@model InterfazGraficaWeb.Models.Persona

@{
    ViewData["Title"] = "Detalles de Persona";
}

<h1>Detalles de Persona</h1>

<div>
    <h4>@Model.Nombre @Model.Apellido</h4>
    <dl class="row">
        <dt class="col-sm-2">Fecha Nacimiento</dt>
        <dd class="col-sm-10">@Model.FechaNacimiento.ToShortDateString()</dd>
        <dt class="col-sm-2">Documento</dt>
        <dd class="col-sm-10">@Model.NumeroDocumento</dd>
        <dt class="col-sm-2">Domicilio</dt>
        <dd class="col-sm-10">@Model.Domicilio</dd>
        <dt class="col-sm-2">Teléfono</dt>
        <dd class="col-sm-10">@Model.Telefono</dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model.PersonaId" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>

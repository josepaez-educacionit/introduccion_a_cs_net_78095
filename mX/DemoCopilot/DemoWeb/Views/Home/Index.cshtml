@{
    ViewData["Title"] = "Inicio";
}

<div class="container-fluid">
    <div class="jumbotron bg-primary text-white rounded p-5 mb-4">
        <h1 class="display-4">
            <i class="fas fa-home"></i> Bienvenido a DemoWeb
        </h1>
        <p class="lead">Sistema de Gestión de Clientes - Tu plataforma completa para administrar información de clientes</p>
        <hr class="my-4 bg-white">
        <p>Gestiona eficientemente la información de tus clientes con nuestra interfaz intuitiva y moderna.</p>
        <a class="btn btn-light btn-lg" asp-controller="ClientesWeb" asp-action="Index" role="button">
            <i class="fas fa-users"></i> Acceder a Clientes

@model DemoWeb.Models.Cliente

@{
    ViewData["Title"] = "Detalles del Cliente";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0">
                    <i class="fas fa-user"></i> Detalles del Cliente
                </h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label text-muted">
                                <i class="fas fa-hashtag"></i> ID del Cliente
                            </label>
                            <div class="form-control-plaintext border p-2 bg-light rounded">
                                @Html.DisplayFor(model => model.Id)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label text-muted">
                                <i class="fas fa-user"></i> Nombre Completo
                            </label>
                            <div class="form-control-plaintext border p-2 bg-light rounded">
                                @Html.DisplayFor(model => model.NombreCompleto)
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label text-muted">
                                <i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.Nombre)
                            </label>
                            <div class="form-control-plaintext border p-2 bg-light rounded">
                                @Html.DisplayFor(model => model.Nombre)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label text-muted">
                                <i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.Apellido)
                            </label>
                            <div class="form-control-plaintext border p-2 bg-light rounded">
                                @Html.DisplayFor(model => model.Apellido)
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label text-muted">
                        <i class="fas fa-envelope"></i> @Html.DisplayNameFor(model => model.Email)
                    </label>
                    <div class="form-control-plaintext border p-2 bg-light rounded d-flex justify-content-between align-items-center">
                        <span>@Html.DisplayFor(model => model.Email)</span>
                        <a href="mailto:@Model.Email" class="btn btn-sm btn-outline-primary" title="Enviar email">
                            <i class="fas fa-envelope"></i>
                        </a>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label text-muted">
                                <i class="fas fa-phone"></i> @Html.DisplayNameFor(model => model.Telefono)
                            </label>
                            <div class="form-control-plaintext border p-2 bg-light rounded d-flex justify-content-between align-items-center">
                                @if (!string.IsNullOrEmpty(Model.Telefono))
                                {
                                    <span>@Html.DisplayFor(model => model.Telefono)</span>
                                    <a href="tel:@Model.Telefono" class="btn btn-sm btn-outline-success" title="Llamar">
                                        <i class="fas fa-phone"></i>
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">No especificado</span>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label text-muted">
                                <i class="fas fa-map-marker-alt"></i> @Html.DisplayNameFor(model => model.Direccion)
                            </label>
                            <div class="form-control-plaintext border p-2 bg-light rounded">
                                @if (!string.IsNullOrEmpty(Model.Direccion))
                                {
                                    <span>@Html.DisplayFor(model => model.Direccion)</span>
                                }
                                else
                                {
                                    <span class="text-muted">No especificada</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <hr>
                
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver a la Lista
                    </a>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Eliminar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <div class="row">
        <div class="col-md-6">
            <div class="card border-primary">
                <div class="card-header bg-primary text-white">
                    <h6 class="mb-0"><i class="fas fa-chart-bar"></i> Acciones Rápidas</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        @if (!string.IsNullOrEmpty(Model.Email))
                        {
                            <a href="mailto:@Model.Email" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-envelope"></i> Enviar Email
                            </a>
                        }
                        @if (!string.IsNullOrEmpty(Model.Telefono))
                        {
                            <a href="tel:@Model.Telefono" class="btn btn-outline-success btn-sm">
                                <i class="fas fa-phone"></i> Llamar por Teléfono
                            </a>
                        }
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning btn-sm">
                            <i class="fas fa-edit"></i> Editar Información
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0"><i class="fas fa-info-circle"></i> Información del Sistema</h6>
                </div>
                <div class="card-body">
                    <small class="text-muted">
                        <strong>ID único:</strong> @Model.Id<br>
                        <strong>Estado:</strong> <span class="badge bg-success">Activo</span><br>
                        <strong>Registro:</strong> Cliente registrado en el sistema
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Confirmar eliminación
            $('a[asp-action="Delete"]').click(function(e) {
                if (!confirm('¿Está seguro que desea eliminar este cliente?\n\nEsta acción no se puede deshacer.')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}
@model InterfazGraficaWeb.Models.Persona

@{
    ViewData["Title"] = "Editar Persona";
}

<h1>Editar Persona</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="PersonaId" />
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Apellido"></label>
        <input asp-for="Apellido" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FechaNacimiento"></label>
        <input asp-for="FechaNacimiento" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="NumeroDocumento"></label>
        <input asp-for="NumeroDocumento" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Domicilio"></label>
        <input asp-for="Domicilio" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Telefono"></label>
        <input asp-for="Telefono" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>
